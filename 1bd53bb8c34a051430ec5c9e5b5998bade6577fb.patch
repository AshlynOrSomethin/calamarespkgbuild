---
 src/branding/manjaro/slideshow/SlideShow.qml | 36 ++------------------
 1 file changed, 2 insertions(+), 34 deletions(-)

diff --git a/src/branding/manjaro/slideshow/SlideShow.qml b/src/branding/manjaro/slideshow/SlideShow.qml
index 63956c4ae..870a04483 100644
--- a/src/branding/manjaro/slideshow/SlideShow.qml
+++ b/src/branding/manjaro/slideshow/SlideShow.qml
@@ -73,10 +73,8 @@ Item {
 
     }
 
-    Row {
-        id: sponsoredBy
-
-        spacing: 5
+    Loader {
+        source: "sponsor/SponsoredBy.qml"
 
         anchors {
             bottom: parent.bottom
@@ -84,36 +82,6 @@ Item {
             margins: 10
         }
 
-        Text {
-            height: 30
-            font.family: "Montserrat"
-            color: "white"
-            text: qsTr("Brought to you by")
-            verticalAlignment: Text.AlignVCenter
-        }
-
-        Image {
-            source: "sponsor.svg"
-            onStatusChanged: {
-                if ((status == Image.Error))
-                    sponsoredBy.visible = false;
-
-            }
-
-            sourceSize {
-                height: 30
-            }
-
-            MouseArea {
-                anchors.fill: parent
-                cursorShape: Qt.PointingHandCursor
-                onClicked: {
-                    Qt.openUrlExternally("./sponsor.html");
-                }
-            }
-
-        }
-
     }
 
